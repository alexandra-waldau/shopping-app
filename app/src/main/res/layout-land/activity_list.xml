<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <!-- TextView that shows the ItemList-->
        <TextView
            android:id="@+id/itemsListTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp" />

        <!-- Button to delete the lowest Item on the list -->
        <Button
            android:id="@+id/deleteItemImgBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/deleteItemBtn_name"
            android:textAllCaps="false"
            android:backgroundTint="@android:color/holo_red_light" />

        <!-- Button to delete all Items on the list. -->
        <Button
            android:id="@+id/deleteAllItemsBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/deleteAllItemsBtn_name"
            android:textAllCaps="false"
            android:backgroundTint="@android:color/holo_red_light" />

    </LinearLayout>

</FrameLayout>