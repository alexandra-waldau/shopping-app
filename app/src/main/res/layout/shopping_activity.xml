<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <!-- TextView and EditText for the 'What' field-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/whatEditText"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textAutoCorrect"
            android:hint="@string/whatTextView"/>

    </LinearLayout>

    <!-- TextView and EditText for the 'Where' field-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/whereEditText"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textAutoCorrect"
            android:hint="@string/whereTextView"/>

    </LinearLayout>

    <!-- TextView that shows the ItemList-->
    <TextView
        android:id="@+id/itemsListTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp" />

    <!-- Button to List all Items -->
    <Button
        android:id="@+id/listItemsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/listItemsBtn_name"
        android:backgroundTint="@android:color/holo_green_light"/>

    <!-- Button to Add a new Item -->
    <Button
        android:id="@+id/addItemBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/addItemBtn_name"
        android:backgroundTint="@android:color/holo_green_light"/>

</LinearLayout>
