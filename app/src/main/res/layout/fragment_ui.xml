<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_margin="16dp">

    <!-- TextView and EditText for the 'What' field-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/whatEditText"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textAutoCorrect"
            android:hint="@string/whatTextView"
            android:imeOptions="actionDone"/>

    </LinearLayout>

    <!-- TextView and EditText for the 'Where' field-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/whereEditText"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textAutoCorrect"
            android:hint="@string/whereTextView"
            android:imeOptions="actionDone"/>

    </LinearLayout>

    <!-- Button to Add a new Item -->
    <Button
        android:id="@+id/addItemBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/addItemBtn_name"
        android:textAllCaps="false"
        android:backgroundTint="@android:color/holo_green_light" />

    <!-- Button to List all Items -->
    <Button
        android:id="@+id/listItemsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/listItemsBtn_name"
        android:textAllCaps="false"
        android:backgroundTint="@android:color/holo_blue_light" />

    <!-- Temporarily moving the delete buttons here until I can figure out what to do with them... -->
    <!-- Button to remove the lowest Item on the list -->
    <Button
        android:id="@+id/removeItemBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/deleteItemBtn_name"
        android:textAllCaps="false"
        android:backgroundTint="@android:color/holo_red_light" />

    <!-- Button to remove all Items on the list. -->
    <Button
        android:id="@+id/removeAllItemsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/deleteAllItemsBtn_name"
        android:textAllCaps="false"
        android:backgroundTint="@android:color/holo_red_light" />

</LinearLayout>
